{
    "name": "konafets/sylius-installer",
    "description": "Installs Sylius and create plugin skeleton",
    "keywords": ["sylius"],
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Kowalke",
            "email": "info@arroba-it.de"
        }
    ],
    "autoload": {
        "psr-4": {
            "Konafets\\Installer\\Console\\": "src/",
            "Konafets\\Tests\\": "tests/"
        }
    },
    "require": {
        "ext-json": "*",
        "symfony/console": "^4.1",
        "symfony/filesystem": "^4.1",
        "symfony/process": "^4.1",
        "nadar/php-composer-reader": "^1.0",
        "symfony/finder": "^4.1",
        "anahkiasen/underscore-php": "^2.0",
        "mikey179/vfsStream": "^1.6"
    },
    "bin": [
